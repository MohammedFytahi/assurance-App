<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Base de données PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/assurance_db</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">2001</property>

        <!-- Propriétés Hibernate -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>

        <!-- Configuration du pool de connexions (facultatif) -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Scan des entités -->
        <mapping class="com.example.demomvc.model.User"/>
        <mapping class="com.example.demomvc.model.Contract"/>
        <mapping class="com.example.demomvc.model.CarInsurance"/>
        <mapping class="com.example.demomvc.model.HealthInsurance"/>
        <mapping class="com.example.demomvc.model.HomeInsurance"/>
        <mapping class="com.example.demomvc.model.Quote"/>

    </session-factory>
</hibernate-configuration>
